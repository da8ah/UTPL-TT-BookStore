{
  "name": "utpl-tt-bookstore",
  "version": "0.6.0",
  "description": "BookStore Backend App",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "ts-node-dev ./src/server.ts",
    "test": "jest --detectOpenHandles --forceExit --runInBand"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/da8ah/UTPL-TT-BookStore.git"
  },
  "keywords": [],
  "author": "Tiber",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/da8ah/UTPL-TT-BookStore/issues"
  },
  "homepage": "https://github.com/da8ah/UTPL-TT-BookStore#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.3",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "stripe": "^12.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.0",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "rome": "^12.1.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7"
  }
}